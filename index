<!DOCTYPE html>
<html>
<head>
  <base target="_top">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { 
      font-family: Arial, sans-serif; 
      padding: 20px;
      background-color: #f5f5f5;
      margin: 0;
    }
    h1 {
      color: #333;
      text-align: center;
    }
    .chart-container { 
      background: white;
      padding: 30px;
      margin: 20px auto;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      max-width: 1200px;
    }
    #loading {
      text-align: center;
      padding: 100px;
      font-size: 18px;
      color: #666;
    }
    .error {
      color: red;
      text-align: center;
      padding: 50px;
    }
  </style>
</head>
<body>
  <h1>üìä Ventas Diarias - Enero 2026</h1>
  
  <div id="loading">Cargando datos desde BigQuery...</div>
  
  <div class="chart-container" style="display:none;">
    <canvas id="graficoVentas"></canvas>
  </div>
  
  <script>
    google.script.run
      .withSuccessHandler(crearGrafico)
      .withFailureHandler(mostrarError)
      .obtenerVentas();
    
    function crearGrafico(datos) {
      document.getElementById('loading').style.display = 'none';
      document.querySelector('.chart-container').style.display = 'block';
      
      var fechas = datos.map(d => d.fecha);
      var montos = datos.map(d => d.monto);
      
      var ctx = document.getElementById('graficoVentas').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: fechas,
          datasets: [{
            label: 'Ventas (sin IVA)',
            data: montos,
            backgroundColor: 'rgba(54, 162, 235, 0.6)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 2
          }]
        },
        options: {
          responsive: true,
          plugins: {
            title: {
              display: true,
              text: 'Ventas por D√≠a',
              font: { size: 18 }
            },
            legend: {
              display: true
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                callback: function(value) {
                  return '$' + value.toLocaleString();
                }
              }
            }
          }
        }
      });
    }
    
    function mostrarError(error) {
      document.getElementById('loading').innerHTML = 
        '<div class="error">‚ùå Error: ' + error.message + '</div>';
    }
  </script>
</body>
</html>
