<body>
  
  <!-- PANTALLA DE LOGIN -->
  <div id="loginScreen">
    <div class="login-box">
      <div class="lock-icon">üîí</div>
      <h2>Dashboard Ventas</h2>
      <p class="subtitle">Acceso restringido</p>
      
      <input 
        type="password" 
        id="passwordInput" 
        placeholder="Ingrese la contrase√±a"
      >
      <button onclick="verificarAcceso()">Ingresar</button>
      
      <p class="error-msg" id="errorMsg">‚ùå Contrase√±a incorrecta</p>
    </div>
  </div>
  
  <!-- PANTALLA DE DASHBOARD -->
  <div id="dashboardScreen">
    <h1>üìä Ventas Diarias - Enero 2026</h1>
    
    <div id="loading">Cargando datos desde BigQuery...</div>
    
    <div class="chart-container" style="display:none;">
      <canvas id="graficoVentas"></canvas>
    </div>
  </div>
  
  <script>
    // Al cargar, enfocar el campo de contrase√±a
    document.getElementById('passwordInput').focus();
    
    // Permitir Enter para enviar
    document.getElementById('passwordInput').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        verificarAcceso();
      }
    });
    
    function verificarAcceso() {
      var password = document.getElementById('passwordInput').value;
      
      google.script.run
        .withSuccessHandler(function(esValida) {
          if (esValida) {
            // Contrase√±a correcta - mostrar dashboard
            document.getElementById('loginScreen').style.display = 'none';
            document.getElementById('dashboardScreen').style.display = 'block';
            cargarDatos();
          } else {
            // Contrase√±a incorrecta
            document.getElementById('errorMsg').style.display = 'block';
            document.getElementById('passwordInput').value = '';
            document.getElementById('passwordInput').focus();
          }
        })
        .verificarPassword(password);
    }
    
    function cargarDatos() {
      google.script.run
        .withSuccessHandler(crearGrafico)
        .withFailureHandler(mostrarError)
        .obtenerVentas();
    }
    
    function crearGrafico(datos) {
      document.getElementById('loading').style.display = 'none';
      document.querySelector('.chart-container').style.display = 'block';
      
      var fechas = datos.map(d => d.fecha);
      var montos = datos.map(d => d.monto);
      
      var ctx = document.getElementById('graficoVentas').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: fechas,
          datasets: [{
            label: 'Ventas (sin IVA)',
            data: montos,
            backgroundColor: 'rgba(54, 162, 235, 0.6)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 2
          }]
        },
        options: {
          responsive: true,
          plugins: {
            title: {
              display: true,
              text: 'Ventas por D√≠a',
              font: { size: 18 }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                callback: function(value) {
                  return '$' + value.toLocaleString();
                }
              }
            }
          }
        }
      });
    }
    
    function mostrarError(error) {
      document.getElementById('loading').innerHTML = 
        '<div style="color:red;">‚ùå Error: ' + error.message + '</div>';
    }
  </script>
  
</body>
</html>
